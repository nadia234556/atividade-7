using System;

public class Pet
{
    // Atributos do pet (caracter√≠sticas)
    private string nome;
    private int energia;
    private int fome;

    // Construtor (executado quando um novo Pet √© criado)
    public Pet(string nome)
    {
        this.nome = nome;
        this.energia = 100;  // valor inicial
        this.fome = 0;       // come√ßa sem fome
    }

    // M√©todo para o pet comer
    public void Comer()
    {
        Console.WriteLine($"{nome} est√° comendo...");
        energia += 10;
        fome -= 20;
        if (fome < 0) fome = 0;  // evitar valor negativo
        if (energia > 100) energia = 100; // limite m√°ximo
    }

    // M√©todo para o pet dormir
    public void Dormir()
    {
        Console.WriteLine($"{nome} est√° dormindo...");
        energia += 20;
        fome += 10;
        if (energia > 100) energia = 100;
    }

    // M√©todo para o pet brincar
    public void Brincar()
    {
        if (energia >= 20)
        {
            Console.WriteLine($"{nome} est√° brincando!");
            energia -= 20;
            fome += 15;
        }
        else
        {
            Console.WriteLine($"{nome} est√° cansado demais para brincar!");
        }

        if (fome > 100) fome = 100;
    }

    // M√©todo para mostrar o estado atual do pet
    public void Status()
    {
        Console.WriteLine("----- STATUS DO PET -----");
        Console.WriteLine($"Nome: {nome}");
        Console.WriteLine($"Energia: {energia}");
        Console.WriteLine($"Fome: {fome}");
        Console.WriteLine("-------------------------\n");
    }
}

üß™ Etapa 2: Criar o Programa Principal com Menu
using System;

class Program
{
    static void Main(string[] args)
    {
        Console.WriteLine("üê∂ Bem-vindo ao Pet Virtual!");
        Console.Write("Digite o nome do seu Pet: ");
        string nomeDoPet = Console.ReadLine();

        // Criamos um novo objeto da classe Pet
        Pet meuPet = new Pet(nomeDoPet);

        int opcao = -1;

        while (opcao != 0)
        {
            Console.WriteLine("\n--- MENU DO PET ---");
            Console.WriteLine("1. Ver status do Pet");
            Console.WriteLine("2. Alimentar o Pet");
            Console.WriteLine("3. Colocar o Pet para dormir");
            Console.WriteLine("4. Brincar com o Pet");
            Console.WriteLine("0. Sair");
            Console.Write("Escolha uma op√ß√£o: ");

            string entrada = Console.ReadLine();

            // Valida√ß√£o da op√ß√£o digitada
            if (!int.TryParse(entrada, out opcao))
            {
                Console.WriteLine("Digite uma op√ß√£o v√°lida!");
                continue;
            }

            switch (opcao)
            {
                case 1:
                    meuPet.Status();
                    break;
                case 2:
                    meuPet.Comer();
                    break;
                case 3:
                    meuPet.Dormir();
                    break;
                case 4:
                    meuPet.Brincar();
                    break;
                case 0:
                    Console.WriteLine("Saindo do jogo... At√© mais!");
                    break;
                default:
                    Console.WriteLine("Op√ß√£o inv√°lida. Tente novamente.");
                    break;
            }
        }
    }
}
