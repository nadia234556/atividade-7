using System;

class Program
{
    static void Main(string[] args)
    {
        Console.WriteLine("üê∂ Bem-vindo ao Pet Virtual!");
        Console.Write("Digite o nome do seu Pet: ");
        string nomeDoPet = Console.ReadLine();

        // Criamos um novo objeto da classe Pet
        Pet meuPet = new Pet(nomeDoPet);

        int opcao = -1;

        while (opcao != 0)
        {
            Console.WriteLine("\n--- MENU DO PET ---");
            Console.WriteLine("1. Ver status do Pet");
            Console.WriteLine("2. Alimentar o Pet");
            Console.WriteLine("3. Colocar o Pet para dormir");
            Console.WriteLine("4. Brincar com o Pet");
            Console.WriteLine("0. Sair");
            Console.Write("Escolha uma op√ß√£o: ");

            string entrada = Console.ReadLine();

            // Valida√ß√£o da op√ß√£o digitada
            if (!int.TryParse(entrada, out opcao))
            {
                Console.WriteLine("Digite uma op√ß√£o v√°lida!");
                continue;
            }

            switch (opcao)
            {
                case 1:
                    meuPet.Status();
                    break;
                case 2:
                    meuPet.Comer();
                    break;
                case 3:
                    meuPet.Dormir();
                    break;
                case 4:
                    meuPet.Brincar();
                    break;
                case 0:
                    Console.WriteLine("Saindo do jogo... At√© mais!");
                    break;
                default:
                    Console.WriteLine("Op√ß√£o inv√°lida. Tente novamente.");
                    break;
            }
        }
    }
}
